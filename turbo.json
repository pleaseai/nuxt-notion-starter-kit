{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "prepare": {
      "outputs": [".nuxt/**"],
      "cache": true
    },
    "build": {
      "dependsOn": ["prepare", "^build"],
      "outputs": ["dist/**", ".output/**", ".nuxt/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^build"]
    },
    "type-check": {
      "dependsOn": ["^build"]
    },
    "clean": {
      "cache": false
    }
  }
}
